   <string notr="true">/* -----------------------------------------
   MAGNIFIED IMAGE VIEW PAGE
----------------------------------------- */
QWidget#img_magnified_view {
    background-color: rgba(30, 30, 40, 0.6); /* semi-transparent dark */
    border-radius: 16px;
    padding: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* -----------------------------------------
   IMAGE WIDGET (left side)
----------------------------------------- */
QWidget#img_widget {
    background-color: rgba(255, 255, 255, 0.12);  /* translucent */
    border-top-left-radius: 16px;
    border-bottom-left-radius: 16px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 8px;
    transition: all 0.2s ease;
}

QWidget#img_widget:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.35);
    box-shadow: 0 8px 24px rgba(180, 150, 220, 0.4);
}

/* -----------------------------------------
   IMAGE LABEL
----------------------------------------- */
QLabel#img_lbl {
    border-radius: 12px;
    background-color: rgba(0,0,0,0.1);
}

/* -----------------------------------------
   INFO WIDGET (right side)
----------------------------------------- */
QWidget#info_widget {
    background-color: rgba(255, 255, 255, 0.12);  /* translucent */
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    border-top-right-radius: 16px;
    border-bottom-right-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 12px;
    transition: all 0.2s ease;
}

QWidget#info_widget:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.35);
    box-shadow: 0 8px 24px rgba(180, 150, 220, 0.4);
}

/* -----------------------------------------
   INFO LABELS
----------------------------------------- */
QLabel {
    color: #F5F0FF;
    font-weight: 500;
    font-size: 14px;
    padding: 2px 0;
}

/* -----------------------------------------
   LIKE BUTTON
----------------------------------------- */
QPushButton {
    background-color: rgba(255, 255, 255, 0.12);
    color: #F5F0FF;
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 6px;
    padding: 6px 12px;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.2s ease;
    min-height: 36px;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 6px 16px rgba(180, 150, 220, 0.4);
}


</string>
