   <string notr="true">/* -----------------------------------------
   MAIN DIALOG BACKGROUND
----------------------------------------- */
QDialog {
    background: qlineargradient(
        spread:pad,
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #2C173A,
        stop:1 #0F0A12
    );
}


/* -----------------------------------------
   DIALOG BACKGROUND WIDGET
----------------------------------------- */
QWidget#bg_widget {
    /* Full dialog background */
    /* FIX: Switched to background-image and related properties for a full background cover */
    background-image:url(:/icons/assets/sunset_chimney_text.png) ;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover; /* Tries to cover the entire area, similar to stretch */
    border: none;
}

/* -----------------------------------------
   FORM WIDGET (on top of background)
----------------------------------------- */
QWidget#form_widget {
    background-color: rgba(220, 220, 220, 0.7); /* translucent grey */
    border: 1px solid rgba(200, 200, 200, 0.5); /* subtle border */
    border-radius: 12px;
    padding: 20px;
}

/* -----------------------------------------
   LABELS INSIDE FORM
----------------------------------------- */
QWidget#form_widget QLabel {
    background: transparent;  /* completely transparent, no outline */
    color: #2D2440;           /* dark text */
    font-weight: 500;
    padding: 0;               /* remove any extra spacing */
    border: none;             /* ensure no borders */
}

/* -----------------------------------------
   FORM INPUTS
----------------------------------------- */
QLineEdit, QTextEdit {
    background-color: rgba(255, 255, 255, 0.25);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 8px;
    padding: 10px;
    color: #2D2440;
    font-size: 14px;
}

QLineEdit:focus, QTextEdit:focus {
    background-color: rgba(255, 255, 255, 0.35);
    border: 1px solid rgba(220, 180, 230, 0.8);
}

/* -----------------------------------------
   SIGNUP BUTTON
----------------------------------------- */
QPushButton#login_btn {
    background-color: #A855F7; /* solid purple */
    color: #FFFFFF;            /* white text */
    border: none;              /* clean look */
    border-radius: 8px;
    padding: 12px 20px;
    font-weight: 700;
    font-size: 16px;
}

QPushButton#login_btn:hover {
    background-color: #C084FC; /* lighter purple on hover */
}

QPushButton#login_btn:pressed {
    background-color: #9333EA; /* darker purple on press */
    /*transform: scale(0.97);*/
}

/* -----------------------------------------
   FORGOT PASSWORD BUTTON
----------------------------------------- */
QPushButton#forgot_password_btn {
    background-color: transparent;  /* no solid background */
    color: #6B7280;                 /* greyish text (Tailwind gray-500) */
    border: none;
    font-weight: 500;
    font-size: 13px;
    text-decoration: underline;     /* optional: make it look like a link */
    padding: 4px 0;
}

QPushButton#forgot_password_btn:hover {
    color: #4B5563;                 /* slightly darker grey on hover */
    cursor: pointer;                /* show pointer cursor */
}

